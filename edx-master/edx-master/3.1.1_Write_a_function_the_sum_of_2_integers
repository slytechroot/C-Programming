#include <stdio.h>
int sum(int x, int y){
    int compute; //store the math result
    printf("Starting the computation!\n");
    compute = x+y; //do the math
    printf("Finished the computation successfully!\n");
    return compute; //return the result into compute
}
int main(void) {
    int a,b;
    int result;
    printf("Please enter two numbers: ");
    scanf("%d%d", &a, &b);
    printf("You entered %d and %d.\n", a, b);
    result = sum(a, b); //calling the function
    printf("Result of the sum = %d.\n", result);
    return 0;
}
